/**index.wxss**/

.most{
  /* position: relative; */
  height: 100%;
  width: 100%;
  background: rgba(237,  236, 231, 0)
}

.index{
  height: 30vh;
  width: 100vw;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 轮播：课程 广告 */
.index_title_Info{
  height:30vh;
  width: 100%;
  position: relative;
  display: block;
}

.title_outer{
  width: 100%;
  height:100%;
}

.swiper_item{
  width: 100%;
  height: 100%;
}

.slide-image{
  width: 100%;
  height: 100%;
}

/* 每日一句 及各种功能入口 */
.index_head{
  width:100%;
  height: 50vh;
  position: relative;
  padding-top: 1vh;
  padding-bottom: 1vh;
  padding-left: 10%;
  padding-right: 10%;
}

.head_img{
  /* display: block; */
  height: 30%;
  width: 80%;
  display: block;
  /* margin-left: ; */
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.index_cen{
  width: 80%;
  height: 30%;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
  color: white;
  display: block;
  /* height: 20vh; */
}

.index_tool{
  display: block;
  width:80%;
  height: 55%;
  background-color:rgb(237,236,231);
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

.tool_row1{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  top: 10rpx;
  width: 100%;
  height: 48%;
}

.tool_class{
  display: block;
  float: left;
  height: 130rpx;
  width: 120rpx;
  margin-right: 85rpx;
  /* margin-left: 90rpx; */
  /* margin-top: 20rpx; */
}

.tool_img{
  height: 90%;
  width: 100%;
  display: block;
}

.tool_name{
  display: block;
  height: 10%;
  width: 100%;
  font-size :25rpx;
  text-align: center;
}

.tool_store{
  display: block;
  float: right;
  margin-left: 85rpx;
  height: 130rpx;
  width: 130rpx;
}

.tool_row2{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 48%;
  bottom: 25rpx;
}

.tool_down{
  display: block;
  float: left;
  margin-right: 85rpx;
  height: 130rpx;
  width: 130rpx;
}

.tool_more{
  display: block;
  float: right;
  margin-left: 85rpx;
  height: 130rpx;
  width: 130rpx;
}

.tool_info{
  height: 80%;
  width: 100%;
  background-color: blue;
}



.more_info{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin:auto;
  text-align: center;
}

